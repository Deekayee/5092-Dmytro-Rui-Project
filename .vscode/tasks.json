{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build All: g++.exe",
            "command": "C:/TDM-GCC-64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "shop.cpp",
                "menu.cpp",
                "utils.cpp",
                "-o",
                "${fileDirname}/output/Shop.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build entire project"
        }
    ]
}
